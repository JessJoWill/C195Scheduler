<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="15.0">
            <children>
            <Label text="Enter login information">
               <font>
                  <Font name="Arial Bold" size="20.0" />
               </font>
            </Label>
                <GridPane maxWidth="-Infinity" prefWidth="300.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="146.0" minWidth="10.0" prefWidth="62.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="238.0" minWidth="10.0" prefWidth="238.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="User ID:" />
                        <TextField fx:id="userIdTxt" prefHeight="25.0" prefWidth="212.0" GridPane.columnIndex="1" />
                        <Label text="Password:" GridPane.rowIndex="1" />
                        <TextField fx:id="passwordTxt" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
                <Label alignment="TOP_LEFT" text="Your current location:" />
                <Label fx:id="zoneIdLbl" prefWidth="400.0" textAlignment="CENTER" wrapText="true" />
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="loginBtn" mnemonicParsing="false" onAction="#onLogin" prefWidth="62.0" text="Login" />
                  <Button fx:id="cancelBtn" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onCancel" prefWidth="62.0" text="Cancel" />
               </children>
            </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
